<?php
include "includes/app.php";

$img_list=array("Image_2.png","Image_3.png","Image_4.png","Image_5.png","Layer9.png","Image.png","Image_0.png","Image_1.png");

function resizeimage($curimage,$tosave,$w,$h){
	$cmd="convert $curimage -resize '$w"."x"."$h^' -gravity Center -crop '$w"."x"."$h+0+0' $tosave ; chmod 777 $tosave";
	echo $cmd."<br>";
}


for($i=0;$i<count($img_list);$i++){
	resizeimage("images/".$img_list[$i],"/tmp/img/newimg".$i.".png",226,234);
	//hw=$(identify images/Image_0.png | cut -d ' ' -f 3);w=$(echo $hw|cut -d 'x' -f 1);h=$(echo $hw|cut -d 'x' -f 2);
}


closedb();
?>